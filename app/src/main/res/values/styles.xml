<resources>

    <!-- Base Style for Calculator Buttons -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#333333</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Style for Operator Buttons -->
    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:background">@drawable/operator_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Style for Clear Button -->
    <style name="ClearButton" parent="CalculatorButton">
        <item name="android:background">@drawable/clear_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Style for Equal Button -->
    <style name="EqualButton" parent="CalculatorButton">
        <item name="android:background">@drawable/equal_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
